html, body
  margin 0

body
  font-family sans-serif
  font-size 14px
  
article
  padding 10px

section
  padding 10px

article, section
  background rgba(0,0,0,0.05)

section.property, section.attribute
  border-bottom 1px solid rgba(0,0,0,0.15)
  header
    width 100%
    height 40px
    font-family monospace

    h1,h2,h3,h4,h5,h6
      float left

    .name
      font-size 18px
      padding-right 10px
    .type
      font-size 10px
      color rgba(0,0,0,0.8)
      font-weight normal